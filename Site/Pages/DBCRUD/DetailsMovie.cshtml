@page "{PageNumber=17}/{**data}"
@model Site.Pages.DBCRUD.DetailsMovieModel

@{
    Layout = "_CrudLayout";
}

<div class="row">

    <div class="col col-lg-9 col-xl-7 col-xxl-6 d-block mx-auto px-2">

        <hr class="liniya" />

        <h1 class="fs-3 text_shadow">Информация о фильме<br />@Model.Movie.MovieCaption</h1>

        <hr class="liniya" />

        <div class="card p-2">

            <div class="card-footer px-0">
                <a asp-page="UpdateMovie" asp-route-movieid="@Model.Movie.MovieId" class="btn btn-outline-success mt-1 shadw">Edit</a>
                <a asp-page="DeleteMovie" asp-route-movieid="@Model.Movie.MovieId" class="btn btn-outline-danger mt-1 shadw">Delete</a>
                <a asp-page="ViewMovies" class="btn btn-outline-primary mt-1 shadw">Movies</a>
            </div>

            <vc:image image-name="@Model.Movie.ImageName" css-class="card-img-top shadw" />

            <hr class="liniya" />

            <div class="card-body mx-0 px-0">

                <ul class="list-group list-group-flush text-center">

                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">ImageID</span><br />
                        <span id="MovieID" class="fs-5">@Model.Movie.MovieId</span><br />
                        <span id="MovieIDHelpBlock" class="form-text">
                            идентификатор в базе данных
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">ImageName</span><br />
                        <span id="imageName" class="fs-5">@Model.Movie.ImageName</span><br />
                        <span id="imageNameHelpBlock" class="form-text">
                            параметр «image-name» для ViewComponent
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">MovieCaption</span><br />
                        <span id="MovieCaption" class="fs-5">@Model.Movie.MovieCaption</span><br />
                        <span id="MovieCaptionHelpBlock" class="form-text">
                            название фильма
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">Description</span><br />
                        <span id="MovieDescription" class="fs-5">@Model.Movie.Description</span><br />
                        <span id="MovieDescriptionHelpBlock" class="form-text">
                            краткое содержание
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">Duration</span><br />
                        <span id="MovieDuration" class="fs-5">@Model.Movie.Duration.ToString("'T'HH'H'mm'M'ss'S'")</span><br />
                        <span id="MovieDurationHelpBlock" class="form-text">
                            продолжительность фильма
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">DatePublished</span><br />
                        <span id="MovieDatePublished" class="fs-5">@Model.Movie.DatePublished.ToString("yyyy-MM-dd")</span><br />
                        <span id="MovieDatePublishedHelpBlock" class="form-text">
                            дата премьеры
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">DateCreated</span><br />
                        <span id="MovieDateCreated" class="fs-5">@Model.Movie.DateCreated.ToString("yyyy-MM-dd")</span><br />
                        <span id="MovieDateCreatedHelpBlock" class="form-text">
                            дата производства
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">UploadDate</span><br />
                        <span id="MovieUploadDate" class="fs-5">@Model.Movie.UploadDate.ToString("yyyy-MM-dd")</span><br />
                        <span id="" MovieUploadDateHelpBlock" class="form-text">
                            дата публикации на сайте
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">IsFamilyFriendly</span><br />
                        <span id="MovieIsFamilyFriendly" class="fs-5">@Model.Movie.IsFamilyFriendly</span><br />
                        <span id="MovieIsFamilyFriendlyHelpBlock" class="form-text">
                            нет ограничений для просмотра
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">InLanguage</span><br />
                        <span id="MovieInLanguage" class="fs-5">@Model.Movie.InLanguage</span><br />
                        <span id="MovieInLanguageHelpBlock" class="form-text">
                            язык звуковой дорожки
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">РroductionCompany</span><br />
