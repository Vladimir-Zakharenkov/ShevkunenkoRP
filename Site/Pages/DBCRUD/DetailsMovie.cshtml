                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">Actor09</span><br />
                        <span id="MovieActor09" class="fs-5">@Model.Movie.Actor09</span><br />
                        <span id="MovieActor09HelpBlock" class="form-text">
                            актер (актриса)
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">Actor10</span><br />
                        <span id="MovieActor10" class="fs-5">@Model.Movie.Actor10</span><br />
                        <span id="MovieActor10HelpBlock" class="form-text">
                            актер (актриса)
                        </span>
                    </li>
                </ul>

            </div>

            <div class="card-footer px-0">
                <a asp-page="UpdateMovie" asp-route-movieid="@Model.Movie.MovieId" class="btn btn-outline-success mt-1 shadw">Edit</a>
                <a asp-page="DeleteMovie" asp-route-movieid="@Model.Movie.MovieId" class="btn btn-outline-danger mt-1 shadw">Delete</a>
                <a asp-page="ViewMovies" class="btn btn-outline-primary mt-1 shadw">Movies</a>
            </div>

        </div>

    </div>

</div>