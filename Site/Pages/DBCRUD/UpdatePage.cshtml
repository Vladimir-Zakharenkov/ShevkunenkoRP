@page
@model UpdatePageModel

@{
    Layout = "_CrudLayout";
}

<div class="row">

    <div class="col col-lg-9 col-xl-7 col-xxl-6 d-block mx-auto px-2">

        <hr class="liniya" />

        <h1 class="fs-3 text_shadow">Изменить информацию о странице №@Model.PageToUpdate.PageNumber</h1>

        <hr class="liniya" />

        <form asp-page-handler="OnPost" method="post">

            <input asp-for="PageToUpdate.SitemapModelId" type="hidden" />
            <input asp-for="PageToUpdate.PageNumber" type="hidden" />

            <vc:image-by-id image-id="@Model.PageToUpdate.ImageModelImageId" css-class="width50percent ten mb-2" /><br />

            <label for="ImageModelImageIdInput" asp-for="PageToUpdate.ImageModelImageId" class="form-label text-primary fs-5"></label>
            <input id="ImageModelImageIdInput" asp-for="PageToUpdate.ImageModelImageId" class="form-control" aria-describedby="ImageModelImageIdInputHelpBlock" />
            <div id="ImageModelImageIdInputHelpBlock" class="form-text">
                картинка для страницы GUID
            </div>
            <span asp-validation-for="PageToUpdate.ImageModelImageId" class="text-danger"></span>

            <hr class="liniya" />

            <label for="LocInput" asp-for="PageToUpdate.Loc" class="form-label text-primary fs-5"></label>
            <input id="LocInput" asp-for="PageToUpdate.Loc" class="form-control" aria-describedby="LocInputHelpBlock" />
            <div id="LocInputBlock" class="form-text">
                Loc: адрес страницы (https://.....)
            </div>
            <span asp-validation-for="PageToUpdate.Loc" class="text-danger"></span>

            <hr class="liniya" />

            <label for="LastmodInput" asp-for="PageToUpdate.Lastmod" class="form-label text-primary fs-5"></label>
            <input id="LastmodInput" asp-for="PageToUpdate.Lastmod" class="form-control" aria-describedby="LastmodInputHelpBlock" />
            <div id="LastmodInputHelpBlock" class="form-text">
                Lastmod: дата последнего изменения
            </div>
            <span asp-validation-for="PageToUpdate.Lastmod" class="text-danger"></span>

            <hr class="liniya" />

            <label for="ChangefreqInput" asp-for="PageToUpdate.Changefreq" class="form-label text-primary fs-5"></label>
            <select id="ChangefreqInput" asp-for="PageToUpdate.Changefreq" class="form-select">
                <option value="always">always</option>
                <option value="hourly">hourly</option>
                <option value="daily">daily</option>
                <option value="weekly">weekly</option>
                <option value="monthly" selected>monthly</option>
                <option value="yearly">yearly</option>
                <option value="never">never</option>
            </select>
            <div id="ChangefreqInputHelpBlock" class="form-text">
                Changefreq: частота изменения страницы
            </div>
            <span asp-validation-for="PageToUpdate.Changefreq" class="text-danger"></span>

            <hr class="liniya" />

            <label for="PrioritylInput" asp-for="PageToUpdate.Priority" class="form-label text-primary fs-5"></label>
            <select id="PriorityInput" asp-for="PageToUpdate.Priority" class="form-select">
                <option value="0.0">0.0</option>
                <option value="0.1">0.1</option>
                <option value="0.2">0.2</option>
                <option value="0.3">0.3</option>
                <option value="0.4">0.4</option>
                <option value="0.5" selected>0.5</option>
                <option value="0.6">0.6</option>
                <option value="0.7">0.7</option>
                <option value="0.8">0.8</option>
                <option value="0.9">0.9</option>
                <option value="1.0">1.0</option>
            </select>
            <div id="PriorityInputHelpBlock" class="form-text">
                Priority: значимость страницы ( от 0.0 до 1.0)
            </div>
            <span asp-validation-for="PageToUpdate.Priority" class="text-danger"></span>

            <hr class="liniya" />

            <label for="LeftBackgroundInput" asp-for="PageToUpdate.LeftBackground" class="form-label text-primary fs-5"></label>
            <input id="LeftBackgroundInput" asp-for="PageToUpdate.LeftBackground" class="form-control" aria-describedby="LeftBackgroundInputHelpBlock" />
            <div id="LeftBackgroundUrlInputHelpBlock" class="form-text">
                LeftBackground: фон страницы слева
            </div>
            <span asp-validation-for="PageToUpdate.LeftBackground" class="text-danger"></span>

            <hr class="liniya" />

            <label for="RightBackgroundInput" asp-for="PageToUpdate.RightBackground" class="form-label text-primary fs-5"></label>
            <input id="RightBackgroundInput" asp-for="PageToUpdate.RightBackground" class="form-control" aria-describedby="RightBackgroundHelpBlock" />
            <div id="RightBackgroundInputHelpBlock" class="form-text">
                RightBackground: фон страницы справа
            </div>
            <span asp-validation-for="PageToUpdate.RightBackground" class="text-danger"></span>

            <hr class="liniya" />

            <label for="TitleInput" asp-for="PageToUpdate.Title" class="form-label text-primary fs-5"></label>
            <input id="TitleInput" asp-for="PageToUpdate.Title" class="form-control" aria-describedby="TitleHelpBlock" />
            <div id="TitleInputHelpBlock" class="form-text">
                Title: заголовок страницы
            </div>
            <span asp-validation-for="PageToUpdate.Title" class="text-danger"></span>

            <hr class="liniya" />

            <label for="DescriptionInput" asp-for="PageToUpdate.Description" class="form-label text-primary fs-5"></label>
            <input id="DescriptionInput" asp-for="PageToUpdate.Description" class="form-control" aria-describedby="DescriptionHelpBlock" />
            <div id="DescriptionInputHelpBlock" class="form-text">
                Description: описание страницы
            </div>
            <span asp-validation-for="PageToUpdate.Description" class="text-danger"></span>

            <hr class="liniya" />

            <label for="KeyWordsInput" asp-for="PageToUpdate.KeyWords" class="form-label text-primary fs-5"></label>
            <input id="KeyWordsInput" asp-for="PageToUpdate.KeyWords" class="form-control" aria-describedby="KeyWordsInputHelpBlock" />
            <div id="KeyWordsHelpBlock" class="form-text">
                KeyWords: ключевые слова
            </div>
            <span asp-validation-for="PageToUpdate.KeyWords" class="text-danger"></span>

            <hr class="liniya" />

            <div class="text-center">

                <button type="submit" class="btn btn-outline-success text-center shadw">UPDATE</button>
                <a asp-page="ViewPages" class="btn btn-outline-danger ms-3 shadw">CANCEL</a>

            </div>

        </form>

    </div>

    <hr class="liniya" />

</div>