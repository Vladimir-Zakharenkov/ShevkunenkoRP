@page
@model Site.Pages.DBCRUD.UpdateImageModel

<div class="row">

    <div class="col col-lg-9 col-xl-7 col-xxl-6 d-block mx-auto px-2">

        <hr class="liniya" />

        <h1 class="fs-3 text_shadow">Изменить данные картинки</h1>

        <hr class="liniya" />

        <vc:image image-name="@Model.ImageToUpdate.ImageName" css-class="adp_img ten" />

        <hr class="liniya" />

        <form method="post" asp-page-handler="OnPost">

            <input asp-for="ImageToUpdate.ImageId" type="hidden" />

            <label for="imageNameInput" asp-for="ImageToUpdate.ImageName" class="form-label text-primary fs-5"></label>
            <input id="imageNameInput" asp-for="ImageToUpdate.ImageName" class="form-control" type="text" aria-describedby="imageNameHelpBlock" />
            <div id="imageNameHelpBlock" class="form-text">
                Параметр «image-name» для ViewComponent
            </div>
            <span asp-validation-for="ImageToUpdate.ImageName" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageName2Input" asp-for="ImageToUpdate.ImageName2" class="form-label text-primary fs-5"></label>
            <input id="imageName2Input" asp-for="ImageToUpdate.ImageName2" class="form-control" type="text" aria-describedby="imageName2HelpBlock" />
            <div id="imageName2HelpBlock" class="form-text">
                Параметр «Name» для Microdata
            </div>
            <span asp-validation-for="ImageToUpdate.ImageName2" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageCaptionInput" asp-for="ImageToUpdate.ImageCaption" class="form-label text-primary fs-5"></label>
            <input id="imageCaptionInput" asp-for="ImageToUpdate.ImageCaption" class="form-control" type="text" aria-describedby="imageCaptionInputHelpBlock" />
            <div id="imageCaptionInputHelpBlock" class="form-text">
                Параметр «Caption» для Microdata
            </div>
            <span asp-validation-for="ImageToUpdate.ImageCaption" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageDescriptionInput" asp-for="ImageToUpdate.ImageDescription" class="form-label text-primary fs-5"></label>
            <input id="imageDescriptionInput" asp-for="ImageToUpdate.ImageDescription" class="form-control" type="text" aria-describedby="imageDescriptionInputHelpBlock" />
            <div id="imageDescriptionInputHelpBlock" class="form-text">
                Параметр «Description» для Microdata
            </div>
            <span asp-validation-for="ImageToUpdate.ImageDescription" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageContentUrlInput" asp-for="ImageToUpdate.ImageContentUrl" class="form-label text-primary fs-5"></label>
            <input id="imageContentUrlInput" asp-for="ImageToUpdate.ImageContentUrl" class="form-control" type="url" aria-describedby="imageContentUrlInputHelpBlock" />
            <div id="imageContentUrlInputHelpBlock" class="form-text">
                Параметр «ContentUrl» для Microdata
            </div>
            <span asp-validation-for="ImageToUpdate.ImageContentUrl" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageThumbnailUrlInput" asp-for="ImageToUpdate.ImageThumbnailUrl" class="form-label text-primary fs-5"></label>
            <input id="imageThumbnailUrlInput" asp-for="ImageToUpdate.ImageThumbnailUrl" class="form-control" type="url" aria-describedby="imageThumbnailUrlInputHelpBlock" />
            <div id="imageThumbnailUrlInputHelpBlock" class="form-text">
                Параметр «ThumbnailUrl» для Microdata
            </div>
            <span asp-validation-for="ImageToUpdate.ImageThumbnailUrl" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageWidthInput" asp-for="ImageToUpdate.ImageWidth" class="form-label text-primary fs-5"></label>
            <input id="imageWidthInput" asp-for="ImageToUpdate.ImageWidth" class="form-control" type="number" aria-describedby="imageWidthInputHelpBlock" />
            <div id="imageWidthInputHelpBlock" class="form-text">
                Ширина картинки в px
            </div>
            <span asp-validation-for="ImageToUpdate.ImageWidth" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageHeightInput" asp-for="ImageToUpdate.ImageHeight" class="form-label text-primary fs-5"></label>
            <input id="imageHeightInput" asp-for="ImageToUpdate.ImageHeight" class="form-control" type="number" aria-describedby="imageHeightInputHelpBlock" />
            <div id="imageHeightInputHelpBlock" class="form-text">
                Высота картинки в px
            </div>
            <span asp-validation-for="ImageToUpdate.ImageHeight" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageSrcInput" asp-for="ImageToUpdate.ImageSrc" class="form-label text-primary fs-5"></label>
            <input id="imageSrcInput" asp-for="ImageToUpdate.ImageSrc" class="form-control" type="text" aria-describedby="imageSrcInputHelpBlock" />
            <div id="imageSrcInputHelpBlock" class="form-text">
                Путь к картинке на сайте
            </div>
            <span asp-validation-for="ImageToUpdate.ImageSrc" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageAltInput" asp-for="ImageToUpdate.ImageAlt" class="form-label text-primary fs-5"></label>
            <input id="imageAltInput" asp-for="ImageToUpdate.ImageAlt" class="form-control" type="text" aria-describedby="imageAltInputHelpBlock" />
            <div id="imageAltInputHelpBlock" class="form-text">
                Параметр «alt» для тега «img»
            </div>
            <span asp-validation-for="ImageToUpdate.ImageAlt" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageTitleInput" asp-for="ImageToUpdate.ImageTitle" class="form-label text-primary fs-5"></label>
            <input id="imageTitleInput" asp-for="ImageToUpdate.ImageTitle" class="form-control" type="text" aria-describedby="imageTitleInputHelpBlock" />
            <div id="imageTitleInputHelpBlock" class="form-text">
                Параметр «title» для тега «img»
            </div>
            <span asp-validation-for="ImageToUpdate.ImageTitle" class="text-danger"></span>

            <hr class="liniya" />

            <label for="ImageTypeInput" asp-for="ImageToUpdate.ImageType" class="form-label text-primary fs-5"></label>
            <input id="ImageTypeInput" asp-for="ImageToUpdate.ImageType" class="form-control" type="text" aria-describedby="imageTitleInputHelpBlock" />
            <div id="imageTypeInputHelpBlock" class="form-text">
                Тип изображения (расширение файла)
            </div>
            <span asp-validation-for="ImageToUpdate.ImageType" class="text-danger"></span>

            <hr class="liniya" />

            <div class="text-center">

                <button type="submit" class="btn btn-success shadow text-center">UPDATE</button>
                <a asp-page="ViewImages" class="btn btn-danger shadow ms-3">CANCEL</a>

            </div>

        </form>

    </div>

    <hr class="liniya" />

</div>