@page
@model DeletePageModel

@{
    Layout = "_CrudLayout";
}

<div class="row">

    <div class="col col-lg-9 col-xl-7 col-xxl-6 d-block mx-auto px-2">

        <hr class="liniya" />

        <h1 class="fs-3 text_shadow">Удалить страницу  №@Model.SitemapItem.PageNumber</h1>

        <hr class="liniya" />

        <div class="card p-2">

            <div class="card-body mx-0 px-0">

                <ul class="list-group list-group-flush text-center">

                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">SitemapPageID</span><br />
                        <span id="SitemapPageID" class="fs-5">@Model.SitemapItem.SitemapModelId</span><br />
                        <span id="SitemapPageIDHelpBlock" class="form-text">
                            идентификатор в базе данных
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">PageNumber</span><br />
                        <span id="PageNumber" class="fs-5">@Model.SitemapItem.PageNumber</span><br />
                        <span id="PageNumberHelpBlock" class="form-text">
                            номер страницы
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">Loc</span><br />
                        <span id="Loc" class="fs-5">@Model.SitemapItem.Loc</span><br />
                        <span id="LocHelpBlock" class="form-text">
                            адрес страницы
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">Title</span><br />
                        <span id="Title" class="fs-5">@Model.SitemapItem.Title</span><br />
                        <span id="TitleHelpBlock" class="form-text">
                            заголовок страницы
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">Description</span><br />
                        <span id="Description" class="fs-5">@Model.SitemapItem.Description</span><br />
                        <span id="DescriptionHelpBlock" class="form-text">
                            описание страницы
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">Lastmod</span><br />
                        <span id="Lastmod" class="fs-5">@Model.SitemapItem.Lastmod.ToString("yyyy-MM-dd")</span><br />
                        <span id="LastmodHelpBlock" class="form-text">
                            дата последнего изменения
                        </span>
                    </li>

                </ul>

            </div>

        </div>

        <form method="post" asp-page-handler="OnPost" asp-route-sitemapmodelid="@Model.SitemapItem.SitemapModelId" class="mt-2">

            <button type="submit" class="btn btn-outline-danger me-2 shadw">Delete</button>
            <a asp-page="ViewPages" class="btn btn-outline-success shadw">Cancel</a>

        </form>

    </div>

</div>