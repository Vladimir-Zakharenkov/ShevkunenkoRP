@page "{PageNumber=23}/{**data}"
@model DBCRUD.DetailsCardModel

@{
    Layout = "_CrudLayout";
}

<div class="row">

    <div class="col col-lg-9 col-xl-7 col-xxl-6 d-block mx-auto px-2">

        <hr class="liniya" />

        <h1 class="fs-3 text_shadow">Параметры карточки</h1>

        <hr class="liniya" />

        <div class="card p-2">

            <div class="card-footer px-0">
                <a asp-page="UpdateCard" asp-route-cardid="@Model.Card.CardId" class="btn btn-outline-success mt-1 shadw">Edit</a>
                <a asp-page="DeleteCard" asp-route-cardid="@Model.Card.CardId" class="btn btn-outline-danger mt-1 shadw">Delete</a>
                <a asp-page="ViewCards" class="btn btn-outline-primary mt-1 shadw">Cards</a>
            </div>

            <vc:image image-name="@Model.Card.ImageName" css-class="card-img-top shadw" />

            <hr class="liniya" />

            <div class="card-body mx-0 px-0">

                <ul class="list-group list-group-flush text-center">

                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">CardId</span><br />
                        <span id="CardId" class="fs-5">@Model.Card.CardId</span><br />
                        <span id="CardIdHelpBlock" class="form-text">
                            идентификатор в базе данных
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">ImageName</span><br />
                        <span id="ImageName" class="fs-5">@Model.Card.ImageName</span><br />
                        <span id="ImageNameHelpBlock" class="form-text">
                            параметр «image-name» для ViewComponent
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">CardLink</span><br />
                        <span id="CardLink" class="fs-5">@Model.Card.CardLink</span><br />
                        <span id="CardLinkHelpBlock" class="form-text">
                            адрес страницы
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">CardBody</span><br />
                        <span id="CardBody" class="fs-5">@Model.Card.CardBody</span><br />
                        <span id="CardBodyHelpBlock" class="form-text">
                            наличие текста под картинкой
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">CardText</span><br />
                        <span id="CardText" class="fs-5">@Model.Card.CardText</span><br />
                        <span id="CardTextHelpBlock" class="form-text">
                            текст под картинкой
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="fw-bold fs-5 text-primary">CardMovie</span><br />
                        <span id="CardMovie" class="fs-5">@Model.Card.CardMovie</span><br />
                        <span id="CardMovieHelpBlock" class="form-text">
                            карточка для фильма
                        </span>
                    </li>

                </ul>

            </div>

            <div class="card-footer px-0">
                <a asp-page="UpdateCard" asp-route-cardid="@Model.Card.CardId" class="btn btn-outline-success mt-1 shadw">Edit</a>
                <a asp-page="DeleteCard" asp-route-cardid="@Model.Card.CardId" class="btn btn-outline-danger mt-1 shadw">Delete</a>
                <a asp-page="ViewCards" class="btn btn-outline-primary mt-1 shadw">Cards</a>
            </div>

        </div>

    </div>

</div>