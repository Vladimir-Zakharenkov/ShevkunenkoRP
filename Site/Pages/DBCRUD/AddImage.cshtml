@page "{pageNumber=9}/{**data}"
@model Site.Pages.DBCRUD.AddImageModel

@{
    Layout = "_CrudLayout";
}

<div class="row">

    <div class="col col-lg-9 col-xl-7 col-xxl-6 d-block mx-auto px-2">

        <hr class="liniya" />

        <h1 class="fs-3 text_shadow">Добавить картинку в&nbsp;базу данных</h1>

        <hr class="liniya" />

        <form method="post" asp-page-handler="OnPost">

            <label for="imageNameInput" asp-for="Image.ImageName" class="form-label text-primary fs-5"></label>
            <input id="imageNameInput" asp-for="Image.ImageName" class="form-control" type="text" aria-describedby="imageNameHelpBlock" />
            <div id="imageNameInputHelpBlock" class="form-text">
                параметр «image-name» для ViewComponent
            </div>
            <span asp-validation-for="Image.ImageName" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageName2Input" asp-for="Image.ImageName2" class="form-label text-primary fs-5"></label>
            <input id="imageName2Input" asp-for="Image.ImageName2" class="form-control" type="text" aria-describedby="imageName2HelpBlock" />
            <div id="imageName2InputHelpBlock" class="form-text">
                параметр «Name» для Microdata
            </div>
            <span asp-validation-for="Image.ImageName2" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageCaptionInput" asp-for="Image.ImageCaption" class="form-label text-primary fs-5"></label>
            <input id="imageCaptionInput" asp-for="Image.ImageCaption" class="form-control" type="text" aria-describedby="imageCaptionInputHelpBlock" />
            <div id="imageCaptionInputHelpBlock" class="form-text">
                параметр «Caption» для Microdata
            </div>
            <span asp-validation-for="Image.ImageCaption" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageDescriptionInput" asp-for="Image.ImageDescription" class="form-label text-primary fs-5"></label>
            <input id="imageDescriptionInput" asp-for="Image.ImageDescription" class="form-control" type="text" aria-describedby="imageDescriptionInputHelpBlock" />
            <div id="imageDescriptionInputHelpBlock" class="form-text">
                параметр «Description» для Microdata
            </div>
            <span asp-validation-for="Image.ImageDescription" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageContentUrlInput" asp-for="Image.ImageContentUrl" class="form-label text-primary fs-5"></label>
            <input id="imageContentUrlInput" asp-for="Image.ImageContentUrl" class="form-control" type="url" aria-describedby="imageContentUrlInputHelpBlock" />
            <div id="imageContentUrlInputHelpBlock" class="form-text">
                параметр «ContentUrl» для Microdata
            </div>
            <span asp-validation-for="Image.ImageContentUrl" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageThumbnailUrlInput" asp-for="Image.ImageThumbnailUrl" class="form-label text-primary fs-5"></label>
            <input id="imageThumbnailUrlInput" asp-for="Image.ImageThumbnailUrl" class="form-control" type="url" aria-describedby="imageThumbnailUrlInputHelpBlock" />
            <div id="imageThumbnailUrlInputHelpBlock" class="form-text">
                параметр «ThumbnailUrl» для Microdata
            </div>
            <span asp-validation-for="Image.ImageThumbnailUrl" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageWidthInput" asp-for="Image.ImageWidth" class="form-label text-primary fs-5"></label>
            <input id="imageWidthInput" asp-for="Image.ImageWidth" class="form-control" type="number" aria-describedby="imageWidthInputHelpBlock" />
            <div id="imageWidthInputHelpBlock" class="form-text">
                ширина картинки в px
            </div>
            <span asp-validation-for="Image.ImageWidth" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageHeightInput" asp-for="Image.ImageHeight" class="form-label text-primary fs-5"></label>
            <input id="imageHeightInput" asp-for="Image.ImageHeight" class="form-control" type="number" aria-describedby="imageHeightInputHelpBlock" />
            <div id="imageHeightInputHelpBlock" class="form-text">
                высота картинки в px
            </div>
            <span asp-validation-for="Image.ImageHeight" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageSrcInput" asp-for="Image.ImageSrc" class="form-label text-primary fs-5"></label>
            <input id="imageSrcInput" asp-for="Image.ImageSrc" class="form-control" type="text" aria-describedby="imageSrcInputHelpBlock" />
            <div id="imageSrcInputHelpBlock" class="form-text">
                путь к картинке на сайте
            </div>
            <span asp-validation-for="Image.ImageSrc" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageAltInput" asp-for="Image.ImageAlt" class="form-label text-primary fs-5"></label>
            <input id="imageAltInput" asp-for="Image.ImageAlt" class="form-control" type="text" aria-describedby="imageAltInputHelpBlock" />
            <div id="imageAltInputHelpBlock" class="form-text">
                параметр «alt» для тега «img»
            </div>
            <span asp-validation-for="Image.ImageAlt" class="text-danger"></span>

            <hr class="liniya" />

            <label for="imageTitleInput" asp-for="Image.ImageTitle" class="form-label text-primary fs-5"></label>
            <input id="imageTitleInput" asp-for="Image.ImageTitle" class="form-control" type="text" aria-describedby="imageTitleInputHelpBlock" />
            <div id="imageTitleInputHelpBlock" class="form-text">
                параметр «title» для тега «img»
            </div>
            <span asp-validation-for="Image.ImageTitle" class="text-danger"></span>

            <hr class="liniya" />

            <label for="ImageTypeInput" asp-for="Image.ImageType" class="form-label text-primary fs-5"></label>
            <input id="ImageTypeInput" asp-for="Image.ImageType" class="form-control" type="text" aria-describedby="imageTitleInputHelpBlock" />
            <div id="imageTypeInputHelpBlock" class="form-text">
                тип изображения (расширение файла)
            </div>
            <span asp-validation-for="Image.ImageType" class="text-danger"></span>

            <hr class="liniya" />

            <div class="text-center">

                <button type="submit" class="col btn btn-outline-success shadw">ADD</button>
                <a asp-page="ViewImages" class="col btn btn-outline-danger ms-3 shadw">CANCEL</a>
            </div>

        </form>

    </div>

    <hr class="liniya" />

</div>