@model Site.Models.CardModel
@{
}

<div class="col">

    <div class="card shadw rounded-3">

        @if (Model.CardLink.Contains("http"))
        {
            <a href="@Model.CardLink" itemprop="url">

                @if (!(Model.MovieName == string.Empty))
                {
                    <vc:movie movie-name="@Model.MovieName" />
                }
                else
                {
                    <vc:image image-name="@Model.ImageName" css-class="card-img-top shadw rounded-3" />
                }

                @if (Model.CardBody)
                {
                    <div class="card-body p-0 mt-2 shadw cardBodyBg">

                        <p class="card-title fs-5 lh-sm my-0">@Model.CardText</p>

                    </div>
                }

            </a>
        }
        else
        {
            <a asp-page="@Model.CardLink" itemprop="url">

                @if (!(Model.MovieName == string.Empty))
                {
                    <vc:movie movie-name="@Model.MovieName" />
                }
                else
                {
                    <vc:image image-name="@Model.ImageName" css-class="card-img-top shadw rounded-3" />
                }

                @if (Model.CardBody)
                {
                    <div class="card-body p-0 mt-2 shadw cardBodyBg">

                        <p class="card-title fs-5 lh-sm my-0">@Model.CardText</p>

                    </div>
                }

            </a>
        }

    </div>

</div>