@model Site.Models.CardModel

@{
    string ssylka;

    if (Model.CardLink.ToString().Contains("shevkunenko.site"))
    {
        ssylka = "asp-page=" + Model.CardLink.ToString().Trim().Substring(24);
    }
    else
    {
        ssylka = "href=" + Model.CardLink.ToString().Trim();
    }
}

<div class="col">

    <div class="card shadw rounded-3 cardborder">

        <a @ssylka itemprop="url">

            @if (Model.CardMovie)
            {
                <span itemscope itemtype="http://schema.org/VideoObject">

                    <vc:movie movie-caption="@Model.MovieCaption" />

                    <vc:image file-name="@Model.ImageName" css-class="card-img-top shadw rounded-3" image-icon="@((bool)ViewData["ImageIcon"])" />

                </span>
            }
            else
            {
                <vc:image file-name="@Model.ImageName" css-class="card-img-top shadw rounded-3" image-icon="@((bool)ViewData["ImageIcon"])" />
            }

            @if (Model.CardBody)
            {
                <div class="card-body p-0 mt-2 shadw cardBodyBg">

                    <p class="card-title lh-1 my-1 mt-2">@Model.CardText</p>

                </div>
            }

        </a>

    </div>

</div>